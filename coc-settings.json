{
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.htmlLanguages": ["jst"],

  "cSpell.userWords": [
    "Muntz",
    "Neovim",
    "Tasker",
    "Xuyuanp",
    "alphanum",
    "autoload",
    "brunodavi",
    "ctrlp",
    "ctrlpvim",
    "deps",
    "dotfiles",
    "gundo",
    "htmlhint",
    "jreybert",
    "kyazdani",
    "mhinz",
    "mygroup",
    "nvim",
    "regexs",
    "romgrk",
    "syntastic",
    "testid",
    "tldcs",
    "tlds",
    "tpope",
    "trybe",
    "uncommenting",
    "vals",
    "vimagit"
  ],
  "cSpellExt.enableDictionaries": ["portuguese-brazilian"],
  "cSpell.language": "en,pt,pt_BR",

  "eslint.packageManager": "npm",
  "eslint.autoFixOnSave": false,

  "htmlhint.documentSelector": ["html", "ejs"],

  "html.filetypes": ["html", "ejs"],

  "html-css-support.enabledLanguages": [
    "typescriptreact",
    "javascriptreact",
    "html",
    "jst"
  ],
  "html-css-support.styleSheets": [
    "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
  ],

  "prettier.disableLanguages": [],
  "prettier.singleQuote": true,

  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "<space>": ["wait", "expandable?", "cd", "open"]
  },

  "explorer.icon.enableNerdfont": true,
  "explorer.file.showHiddenFiles": true,

  "emmet.showAbbreviationSuggestions": true,
  "emmet.extensionsPath": "~/.config/nvim/plugins/coc.nvim/emmet",
  "emmet.excludeLanguages": [],
  "emmet.showExpandedAbbreviation": "always",
  "emmet.includeLanguages": {
    "markdown": "html",
    "jst": "html"
  },

  "python.linting.flake8Enabled": true
}
